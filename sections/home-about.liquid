  <div class="home_about page-width fade-up" style="background:{{ section.settings.bg_color }};">
   <div class="home_aboutimg col-6 fade-up">
    {%- if section.settings.image != blank -%}           
    {{ section.settings.image | image_url: width: 540 | image_tag:
    loading: 'lazy',
     class: 'full',
    sizes: sizes,
    widths: '165, 360, 535, 750, 1070, 1500, 1600, 1800, 2000, 2200'
    }}
    {%- else -%}
    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}
   </div>
 <div class="home_abouttext col-6 fade-up">
   <div class="home_about_rte full">
{%- if section.settings.title != blank -%}                   
<h3 class="h3 full">{{ section.settings.title }}</h3>
{%- endif -%}
{%- if section.settings.text != blank -%}                   
{{ section.settings.text }}
{%- endif -%}     
  {% if section.settings.btn_label != blank %}
  <a href="{{ section.settings.btn_link }}" class="no_btn">{{ section.settings.btn_label }} {% render 'btn-arrow' %}</a>
   {% endif %}
   </div>
     </div>
  </div>

