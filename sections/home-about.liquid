      {
                  "type": "image_picker",
                  "id": "image",
                  "label": "image"
              },

      {
                  "type": "text",
                  "id": "title",
                  "label": "Title"
              },
          {
                  "type": "richtext",
                  "id": "text",
                  "label": "Text"
              },

      {
                  "type": "text",
                  "id": "btn_label",
                  "label": "Button label"
              },
               {
                  "type": "url",
                  "id": "btn_link",
                  "label": "Button link"
              },
      {
                  "type": "color",
                  "id": "bg_color",
                  "label": "Background color"
              }
    ],
    "presets": [
        {
             "name": "Home about"
        }
    ]
  }
{% endschema %}