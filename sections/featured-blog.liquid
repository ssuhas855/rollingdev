{{ 'component-slider.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-article-card.css' | asset_url | stylesheet_tag }}
{{ 'section-featured-blog.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


<div class="blog color-{{ section.settings.color_scheme }} gradient{% if section.settings.heading == blank %} no-heading{% endif %} home_blog">
  <div class="full p-35">











    
    
    {%- unless section.settings.heading == blank -%}
      <div class="title-wrapper-with-link{% if posts_displayed > 2 %} title-wrapper--self-padded-tablet-down{% else %} title-wrapper--self-padded-mobile{% endif %} title-wrapper--no-top-margin">
        

        {%- if section.settings.blog != blank
          and section.settings.show_view_all
          and section.settings.post_limit < section.settings.blog.articles_count
        -%}
          <a
            href="{{ section.settings.blog.url }}"
            class="link underlined-link large-up-hide"
          >
            {{ 'sections.featured_blog.view_all' | t }}
          </a>
        {%- endif -%}
      </div>
    {%- endunless -%}
    
      <div class="slider-mobile-gutters ">
        <div
          id="Slider-{{ section.id }}s"
          class="blog__posts articles-wrapper line_wrap"
          role="list"
        >
      <div
              id="homeblog_title"
              class="blog__post grid__item article slider__slide slider__slide--full-width fade-up"
            >
      <div class="article-card-wrapper card-wrapper line_wrap">
       <div class="blog__titlerte full">
      {% if section.settings.heading != blank %}
      <h3 class="blog__title h3">
          {{ section.settings.heading }}
        </h3>
           {% endif %}

       {% if section.settings.text != blank %}    
          {{ section.settings.text }}    
           {% endif %}
      
  {% if section.settings.btn_label != blank %}
  <a href="{{ section.settings.btn_link }}" class="no_btn">{{ section.settings.btn_label }} {% render 'btn-arrow' %}</a>
   {% endif %}
       </div>
        <div class="line_animation line_left"> </div> 
  <div class="line_animation"> </div>
          </div>
      
      </div>


{%- for article in blogs.recipes.articles  -%}  

   {% assign barticle = article.handle | remove:'recipes/' %}
   {% assign article_1 = section.settings.h_article1 | remove:'recipes/' %}
  {% assign article_2 = section.settings.h_article2 | remove:'recipes/' %}
  {% assign article_3 = section.settings.h_article3 | remove:'recipes/' %}
  {% assign article_4 = section.settings.h_article4 | remove:'recipes/' %}
  {% assign article_5 = section.settings.h_article5 | remove:'recipes/' %}

 {% if barticle == article_1 or barticle == article_2 or barticle == article_3 or barticle == article_4 or barticle == article_5 %}     
<div
              id="Slide-{{ section.id }}-{{ forloop.index }}"
              class="blog__post grid__item article slider__slide slider__slide--full-width fade-up"
            >
              {% render 'article-card',
                blog: section.settings.blog,
                article: article,
                media_aspect_ratio: 1.66,
                show_image: section.settings.show_image,
                show_date: section.settings.show_date,
                show_author: section.settings.show_author,
                show_excerpt: true
              %}
            </div>
 {% endif %}
  
{% endfor %}


      
      {% comment %}
          {%- for article in section.settings.blog.articles limit: 5 offset:1 -%}
            <div
              id="Slide-{{ section.id }}-{{ forloop.index }}"
              class="blog__post grid__item article slider__slide slider__slide--full-width fade-up"
            >
              {% render 'article-card',
                blog: section.settings.blog,
                article: article,
                media_aspect_ratio: 1.66,
                show_image: section.settings.show_image,
                show_date: section.settings.show_date,
                show_author: section.settings.show_author,
                show_excerpt: true
              %}
            </div>
          {%- endfor -%}
       {% endcomment %}
      
      <div class="line_animation line_top"> </div> 
        </div>
        
      </div>

      {%- if section.settings.show_view_all and section.settings.post_limit < section.settings.blog.articles_count -%}
        <div class="blog__view-all center small-hide medium-hide">
          <a
            href="{{ section.settings.blog.url }}"
            id="ViewAll-{{ section.id }}"
            class="blog__button button"
            aria-labelledby="ViewAll-{{ section.id }} SectionHeading-{{ section.id }}"
          >
            {{ 'sections.featured_blog.view_all' | t }}
          </a>
        </div>
      {%- endif -%}

  </div>
</div>

{% schema %}
{
  "name": "t:sections.featured-blog.name",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Blog posts",
      "label": "t:sections.featured-blog.settings.heading.label"
    },
     {
      "type": "richtext",
      "id": "text",
      "default": "<p>Blog text</p>",
      "label": "Text"
    },
     {
                  "type": "text",
                  "id": "btn_label",
                  "label": "Button label"
              },
               {
                  "type": "url",
                  "id": "btn_link",
                  "label": "Button link"
              },

    {
                  "type": "article",
                  "id": "h_article1",
                  "label": "Select article "
              },
    {
                  "type": "article",
                  "id": "h_article2",
                  "label": "Select article "
              },
    {
                  "type": "article",
                  "id": "h_article3",
                  "label": "Select article "
              },
    {
                  "type": "article",
                  "id": "h_article4",
                  "label": "Select article "
              },
    {
                  "type": "article",
                  "id": "h_article5",
                  "label": "Select article "
              },
    

    
    
    {
      "type": "checkbox",
      "id": "show_image",
      "default": true,
      "label": "t:sections.featured-blog.settings.show_image.label",
      "info": "t:sections.featured-blog.settings.show_image.info"
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "default": true,
      "label": "t:sections.featured-blog.settings.show_date.label"
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "default": false,
      "label": "t:sections.featured-blog.settings.show_author.label"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "t:sections.featured-blog.settings.show_view_all.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  
  "presets": [
    {
      "name": "t:sections.featured-blog.presets.name",
      "settings": {
        
      }
    }
  ]
}
{% endschema %}
